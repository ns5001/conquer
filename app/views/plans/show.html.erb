<header class="w3-container w3-center w3-padding-32">
  <h2><b><%= @plan.name %></b></h2>
</header>

<style>
h4{text-align:justify;}
h5{text-align:center;}
</style>

  <div class="w3-card-4 w3-margin w3-white">
    <div class="w3-container">
      <%@plan.jobs.each do |job|%>
        <h4><%=job.description%></h4>
      <%end%>
      <br><br>
      <h3>Plan's Average Rating</h3>
      <h3><b><%= @average_rating %><b></h3></b>

      <h3>Plans Comments:</h3>
      <% @plans_comments.each do |comment| %>
        <h3><li><b><%= comment %></b></li></h3>
      <% end %>

      <form method="get" action="/users/addplan/<%=@plan.id%>">
        <button type="submit" class="btn btn-primary">Select This Plan</button>
      </form>

      <!-- <h5><b><a href="/users/addplan/<%=@plan.id%>"><br>Select This Plan</a></b></h5> -->
    </div>
  </div>
